<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="375dp"
    android:gravity="center"
    android:background="#fff"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <EditText
            android:layout_margin="16dp"
            android:drawablePadding="10dp"
            android:hint="Nom et prenom"
            android:textColor="@color/GreyBlackForma"
            android:text="Karim Chaari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/GreyBlackForma"
            android:drawableLeft="@drawable/account_icon"/>



        <EditText
            android:layout_margin="16dp"
            android:hint="Emplacement geographique"
            android:textColor="@color/GreyBlackForma"
            android:text="Gremda, Sfax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="8dp"
            android:drawableTint="@color/GreyBlackForma"/>





        <EditText
            android:layout_margin="16dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/GreyBlackForma"
            android:hint="E-mail"
            android:textColor="@color/GreyBlackForma"
            android:text="karim.ch@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

    <EditText
        android:layout_margin="16dp"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/phone_icon"
        android:drawableTint="@color/GreyBlackForma"
        android:hint="Numero mobile"
        android:textColor="@color/GreyBlackForma"
        android:text="+216 50 90 88 29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/close_dialog_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/x_icon"
            app:cb_color="#F6F6F6"
            app:cb_pressedRingWidth="4dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"/>


        <at.markushi.ui.CircleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/tic_icon"
            app:cb_color="#F6F6F6"
            app:cb_pressedRingWidth="4dp"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.7"/>


    </LinearLayout>





</LinearLayout>

