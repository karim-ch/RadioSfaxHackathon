<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="275dp"
    android:gravity="center"
    android:background="#fff"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <EditText
            android:id="@+id/imageTitle"
            android:layout_margin="16dp"
            android:drawablePadding="10dp"
            android:hint="Titre de l'image"
            android:textColor="@color/GreyBlackForma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/GreyBlackForma"
            android:drawableLeft="@drawable/ic_photo"/>



        <EditText
            android:id="@+id/imageDescrip"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:layout_margin="16dp"
            android:hint="Description de l'image"
            android:textColor="@color/GreyBlackForma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_textsms"
            android:drawablePadding="8dp"
            android:drawableTint="@color/GreyBlackForma"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/close_dialog_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/x_icon"
            app:cb_color="#F6F6F6"
            app:cb_pressedRingWidth="4dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"/>


        <at.markushi.ui.CircleButton
            android:id="@+id/done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/tic_icon"
            app:cb_color="#F6F6F6"
            app:cb_pressedRingWidth="4dp"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.7"/>


    </LinearLayout>





</LinearLayout>


</android.support.design.card.MaterialCardView>

