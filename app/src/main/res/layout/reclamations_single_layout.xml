<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="120dp"
        android:weightSum="10">



        <ImageView
            android:id="@+id/reclamations_single_image"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:src="@drawable/android_exemple"/>


        <LinearLayout
            android:weightSum="6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent">

            <com.RadioSfax.acer.radiosfax.CustomFonts.FontTextSourceSansProRegular
                android:id="@+id/reclamations_single_status"
                android:layout_width="match_parent"
                android:layout_weight="1.7"
                android:layout_height="0dp"
                android:textSize="11sp"
                android:padding="10dp"
                android:text="Approved"/>

            <com.RadioSfax.acer.radiosfax.CustomFonts.FontTextSourceSansProRegular
                android:id="@+id/reclamations_single_title"
                android:layout_width="match_parent"
                android:layout_weight="4.3"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:text="sdfsdfsdfsdfsdfsdfsdfsdf"/>
        </LinearLayout>



    </LinearLayout>
</android.support.design.card.MaterialCardView>